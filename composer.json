{
    "name": "gpupo/pack-symfony-odm",
    "description": "Pacotes de uso comum para gerenciamento de ODM em projetos com Symfony",
    "homepage": "https://opensource.gpupo.com/pack-symfony-odm/",
    "authors": [
        {
            "name": "Gilmar Pupo",
            "email": "contact@gpupo.com"
        }
    ],
    "keywords": ["common", "development"],
    "license": "MIT",
    "require": {
        "php": "^8.0",
        "gpupo/pack-symfony-common": "*",
        "doctrine/mongodb-odm-bundle": "^4.2",
        "alcaeus/mongo-php-adapter": "^1.2",
        "mongodb/mongodb": "^1.8"
    },
    "autoload": {
        "psr-4": {
            "Gpupo\\PackSymfonyOdm\\": "src",
            "Gpupo\\PackSymfonyOdm\\Tests\\": "tests"
        }
    },
    "require-dev": {
        "gpupo/pack-symfony-dev": "dev-master"
    },
    "scripts": {
      "test": "APP_ENV=test simple-phpunit"
    },
    "config": {
        "preferred-install": "dist"
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
